{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "allowUnusedLabels": false,
        "noUnusedLocals": true,
        "baseUrl": ".",
        "paths": {
            "@andes/event-bus/*": ["./packages/event-bus/*"],
            "@andes/mongoose-plugin-audit/*": ["./packages/mongoose-plugin-audit/*"],
        },
        "typeRoots": [
            "node_modules/@types",
            "./packages/*",
        ]
    }
}